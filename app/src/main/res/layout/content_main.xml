<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/text_week_title"
        style="@style/text_view_general"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_week"
        android:layout_marginTop="50dp"
        android:text="@string/monday"/>

    <TextView
        android:id="@+id/text_week"
        style="@style/text_view_general"
        android:textSize="18sp"
        tools:text="5"
        android:textStyle="bold"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@id/text_week_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/text_week_title"/>

    <TextView
        android:id="@+id/text_monday_title"
        style="@style/text_view_general"
        app:layout_constraintTop_toBottomOf="@id/text_week_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_monday"
        android:layout_marginTop="12dp"
        android:text="@string/monday"/>

    <TextView
        android:id="@+id/text_monday"
        style="@style/text_view_general"
        android:textSize="18sp"
        tools:text="Monday, Jan.20.2020"
        app:layout_constraintStart_toEndOf="@id/text_monday_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/text_monday_title"/>

    <TextView
        android:id="@+id/text_total_title"
        style="@style/text_view_general"
        app:layout_constraintTop_toBottomOf="@id/text_monday_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:text="@string/total"/>

    <TextView
        android:id="@+id/text_total"
        style="@style/text_view_general"
        android:textSize="18sp"
        tools:text="120"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_total_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>